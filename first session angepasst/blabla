const drums = stack(
  s("hh27").gain(0.5).struct("[1 1 1 1]*4"),
  s("clap").gain(1).struct("[0 0 1 0]*1"),
  s("cp").gain(1).struct("[0 0 0 [~ 1]]").mask("<0 0 0 1>"),
  s("bd").gain(1).struct("[1 0 1 0] [0 0 0 [1 1 1]]").mask("<0 1>")
);



  s("bd").bank("bossdr220").gain(0.5).struct("1 1 ~ [1 1 1]"), // rausnehmen w√§hrend des nicht-chorus 
  //n("0 0 1").scale("C#:major").s("bass1").clip(1).gain(0.7).room(0.5)

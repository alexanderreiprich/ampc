const chords2 = stack(note(`<[0,4,7] [0,4,7] [0,4,7] [0,4,7]>`.add(`<c# e# a# c#>`)).sound("gm_synth_strings_1").crush(6).hpf(2000).gain(0.5).room(1).compressor("-10:10:10:.002:.02"));

const voice1 = stack(
   s("<voice2>")
    .gain(2)
    .cut(2)
    .slow(2)
    .speed(1)
    .lpf(400)
    .begin(0.225)
);

